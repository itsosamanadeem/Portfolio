generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model blog {
  id        String   @id @default(uuid())
  title     String
  thumbnail String?  @db.LongText  // No default value
  content   String  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model project {
  id        String   @id @default(uuid())
  title     String
  thumbnail String?  @db.LongText  // No default value
  content   String  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  position  Int?
}

