generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model blog {
  id        String   @id @default(uuid())
  title     String
  thumbnail String?  @db.LongText  // No default value
  content   String  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model project {
  id        String   @id @default(uuid())
  title     String
  thumbnail String?  @db.LongText  // No default value
  content   String  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  position  Int?
}

model user {
  id       Int      @id @default(autoincrement())  // Auto-incrementing ID
  username String   @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  session[] @relation("UserSessions")
}

model session {
  id            String   @id @default(uuid())  // ID is a UUID
  sessionToken  String   @unique
  userId        Int
  expires       DateTime
  createdAt     DateTime @default(now())  // Timestamp when session is created
  updatedAt     DateTime @updatedAt       // Automatically updates on session change

  user          user     @relation("UserSessions", fields: [userId], references: [id])
}
